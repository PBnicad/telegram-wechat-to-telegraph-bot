# Telegram Bot Configuration
# 从 @BotFather 获取
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Super Admin Configuration
# 设置默认超级管理员的 Telegram 用户 ID
SUPER_ADMIN_ID=your_telegram_user_id_here

# Optional: Admin API Key
# 用于访问管理 API 端点
ADMIN_API_KEY=your_admin_api_key_here

# Optional: Pre-configured Telegraph Access Token
# 如果不提供，机器人会自动创建 Telegraph 账户
TELEGRAPH_ACCESS_TOKEN=your_telegraph_access_token_here

# Bot Configuration
BOT_NAME=wechat2telegraphbot
BOT_AUTHOR=wechat2telegraphbot
BOT_DESCRIPTION=Convert WeChat articles to Telegraph pages

# Service Endpoints
TELEGRAM_API_URL=https://api.telegram.org
TELEGRAPH_API_URL=https://api.telegra.ph
JINA_AI_API_URL=https://r.jina.ai

# Default Configuration
DEFAULT_LANGUAGE=zh-CN
MAX_IMAGE_SIZE=10485760
REQUEST_TIMEOUT=30000

# Environment
NODE_ENV=production